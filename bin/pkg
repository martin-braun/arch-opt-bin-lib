#!/bin/bash

me=`basename "$0"`
if [[ -z $1 || $1 == "-h" || $1 == "--help" ]]; then
	echo "Usage: $me [ [ add | yadd | del | ydel ] <package-name> | [ upd | yupd ] ]"
elif [[ $1 == "add" && $2 ]]; then
	sudo pacman -S $2
elif [[ $1 == "yadd" && $2 ]]; then
	if [[ `which yay` == "/usr/bin/yay" ]]; then
		yay -S $2
	else
		echo "Yay not found!"
	fi
elif [[ $1 == "del" && $2 ]]; then
		sudo pacman -Rns $2
elif [[ $1 == "ydel" && $2 ]]; then
	if [[ `which yay` == "/usr/bin/yay" ]]; then
		yay -Rns $2
	else
		echo "Yay not found!"
	fi
elif [[ $1 == "upd" ]]; then
		sudo pacman -Syu
elif [[ $1 == "yupd" ]]; then
	if [[ `which yay` == "/usr/bin/yay" ]]; then
		yay -Syu
	else
		echo "Yay not found!"
	fi
fi
